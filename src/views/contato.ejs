<%- include('includes/_head'); %>
<%- include('includes/_nav'); %>
    <section class="container">
        <div class="col-lg-2"></div>
        <div class="col-lg-12 my-3">
            <h1 class="text-center">Contact</h1>
            <p class="text-center lead">Create/Update your contact.</p>
            <%- include('includes/_messages'); %>
            <form action="/contato/register" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="mb-3">
                    <label for="nome" class="form-label">Nome</label>
                    <input type="text" value="<%= contato.nome %>" name="nome" class="form-control" id="nome">
                  </div>
                  <div class="mb-3">
                    <label for="sobrenome" class="form-label">Sobrenome</label>
                    <input type="text" value="<%= contato.sobrenome %>" name="sobrenome" class="form-control" id="sobrenome">
                  </div>
                  <div class="mb-3">
                    <label for="phone" class="form-label">Phone Number</label>
                    <input type="tel" value="<%= contato.phone %>" name="phone" class="form-control" id="phone" >
                  </div>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Email address</label>
                  <input type="email" value="<%= contato.email %>" name="email" class="form-control" id="exampleInputEmail1" >
                </div>
                <% if (contato.nome) { %>
                    <button type="submit" class="btn btn-primary">Update</button>

                <% } else { %>
                    <button type="submit" class="btn btn-primary">Create</button>
                <% } %>
              </form>
            
        </div>  
        <div class="col-lg-2"></div>


    </section>
    
<%- include('includes/_footer'); %>